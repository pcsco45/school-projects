def GetPassword(attempt):
    password = ""
    password2 = ""
    lengthcheck = False
    samecheck = False

    if attempt == 1:
        password = input("Enter a password")
    elif attempt == 2:
        password = input("Re-enter your password")

        
    while (lengthcheck == False) or (samecheck == False):
        if lengthcheck == False:
            length = len(password)
            if (password <= 8) and (password >= 6):
                lengthcheck = True
            else:
                print("Password must be 6 to 8 characters long")
                password = input("Re-enter your password")

        if samecheck == False:
            password2 = input("Enter your password again")
            if password2 == password:
                samecheck = True
            else:
                print("Passwords have to be same")
                password2 = input("Re-enter your password")

